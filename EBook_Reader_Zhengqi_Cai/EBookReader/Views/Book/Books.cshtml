@model IEnumerable<Book>

@{
    ViewBag.Title = "Books";
}

<h1>Books</h1>

<p>
    <a asp-action="Index">Create New Book with Create Book link on Genre List</a>
</p>

<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ISBN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genre)
            </th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var book in Model)
            {
        <tr>
            <td>@book.BookId</td>
            <td>@book.ISBN</td>
            <td>@book.Title</td>
            <td>@book.Author</td>
            <td>@book.Genre.Name</td>
            <td>
                <a asp-action="EditBook" asp-route-id="@book.BookId">Edit</a>
                <a asp-action="BookDetails" asp-route-id="@book.BookId">Details</a>
                @if (User.IsInRole("Admin"))
                {
                    <a asp-action="DeleteBook" asp-route-id="@book.BookId">Delete</a>
                }
            </td>
        </tr>
            }
        </tbody>
    </table>

<div>
    <a asp-action="Index">Back to Course List</a>
</div>

